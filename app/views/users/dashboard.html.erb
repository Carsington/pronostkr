<div class="row justify-content-center mt-4 border border-primary">
  <% @user.leagues.each do |league| %>
    <div class="col-4 border rounded border-secondary">
      <%= league.name %>
      <%= league.slug %>
      <%= league.competition.name %>
      <%= league.competition.start_date %>
      <%= league.competition.end_date %>
      <%= league.competition.game.acronym %>
      <%= link_to "LEAGUE_LINK", league %>
    </div>
  <% end %>
</div>

