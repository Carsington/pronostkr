  <div class="row competition-page">
    <div class="col-9">
      <div class="competition-header">
        <h3><%= competition.game.full_name %></h3>
      </div>

      <div class="competition-infos">
        <p><%= competition.location %></p>
        <div class="start-end-dates">
          <p>Début : <%= competition.start_date %></p>
          <p>Fin : <%= competition.end_date %></p>
        </div>
        <p><%= competition.description %></p>
      </div>

      <div class="forecasts-list">
        <% competition.matches.each do |match| %>
          <%#= render "forecasts/forecast_card", match: match, versus_image_path: "versus.png" %>

          <%# user_forecast = Forecast.find_by(user: current_user, match: match) %>
          <%# if user_forecast.nil? %>
            <%#= render 'forecasts/form_new_forecast', match: match %>
          <%# else %>
            <%#= render 'forecasts/form_edit_forecast', match: match, forecast: user_forecast %>
          <%# end %>

          <%= render 'forecasts/form_forecast', match: match %>
        <% end %>
      </div>
    </div>

    <div class="col-3">
      <div class="border border-secondary text-center">
        <%= link_to "Créer une ligue", new_league_path %>
      </div>
      <div class="border border-secondary text-center">
        <%= link_to "Rejoindre la ligue générale" %>
      </div>
      <% competition.leagues.each do |league| %>
        <div class="border border-secondary text-center">
          <%= link_to league.name, league_path(league) %>
        </div>
      <% end %>
    </div>
  </div>
