  <div class="row competition-page">
    <div class="col-9">
      <div class="competition-header">
        <h1><%= @competition.name %></h1>
        <h3><%= @competition.game.full_name %></h3>
      </div>

      <div class="competition-infos">
        <p><%= @competition.location %></p>
        <div class="start-end-dates">
          <p>Début : <%= @competition.start_date %></p>
          <p>Fin : <%= @competition.end_date %></p>
        </div>
        <p><%= @competition.description %></p>
      </div>

      <div class="forecasts-list">
        <% @competition.matches.each do |match| %>
          <div class="forecast-card d-flex justify-content-around align-items-center">
            <div class="team-card">
              <p class="team-name"><%= match.teams[0].name %></p>
              <%= image_tag "teams/fnatic_logo.png", class: "team-logo team-a-logo" %>
            </div>
            <div class="versus-img">
              <%#= image_tag "versus.png" %>
              <%#= image_tag "versus2.png" %>
              <!-- <i class="fa fa-bolt"></i> -->
              <%= image_tag "white-swords.png" %>
            </div>
            <div class="team-card">
              <%= image_tag "teams/astralis_logo.png", class: "team-logo team-b-logo" %>
              <p class="team-name"><%= match.teams[1].name %></p>
            </div>
            <div class="countdown-timer">
              <p>08:05:11</p>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <div class="col-3">
      <div class="border border-secondary text-center">
        <%= link_to "Créer une ligue", new_league_path %>
      </div>
      <div class="border border-secondary text-center">
        <%= link_to "Rejoindre la ligue générale" %>
      </div>
      <% @competition.leagues.each do |league| %>
        <div class="border border-secondary text-center">
          <%= link_to league.name, league_path(league) %>
        </div>
      <% end %>
    </div>
  </div>
