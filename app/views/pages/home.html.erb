<div class="row">
  <div class="col-12">

    <h2>Barre de recherche</h2>
    <%= render 'shared/searchbar' %>

    <% if @query %>
      <% @competitions.each do |competition| %>
        <%= render 'shared/searchresult', competition: competition %>
      <% end %>
    <% end %>

    <h2>Cloche notification</h2>
    <%= render 'shared/bell', suppl_class: 'bell-static' %>
    <%= render 'shared/bell', suppl_class: 'bell-ringing' %>

    <h2>Bouton de validation de formulaire</h2>
    <%= render 'shared/button_submit', label: "valider" %>

    <h2>Carte d'ajout de ligue</h2>
    <%= render 'shared/card_create' %>

    <h2>Carte d'ajout de ligue</h2>
    <%= render 'shared/card_join' %>

  </div>
</div>
