<%= simple_form_for :join, url: root_path, method: :get do |f| %>
  <div>
    <div class="d-flex">
      <div class="input-group-prepend">
        <span class="input-group-text" id="basic-addon1"><i class="fas fa-hashtag"></i></span>
      </div>
      <%= f.input_field :slug, label: false, spellcheck: false, autocomplete: "off", placeholder: '______',
        maxlength: 6, class: "input-slug px-3"%>
      <%= button_tag type: 'submit', class: "join-league-button" do %>
          <i class="fas fa-sign-in-alt"></i>
      <% end %>
    </div>
  </div>
<% end %>
